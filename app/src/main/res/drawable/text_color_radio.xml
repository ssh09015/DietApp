<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">//radio버튼의 글씨색을 설정하는 xml(윤솔)

    <item android:state_checked="true"
        android:color="@color/white"/>//클릭했을 때 radio 버튼색 white(윤솔)
    <item android:state_checked="false"
        android:color="@color/black"/>//클릭하지 않았을 때 radio 버튼색 black(윤솔)

</selector>