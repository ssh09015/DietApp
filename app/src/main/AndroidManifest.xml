<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dietapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_check"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_check_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DietApp">
        <activity android:name=".Timer"></activity>
        <activity android:name=".StatisticsActivity"/>
        <activity android:name=".AppInformation" />
        <activity android:name=".StepActivity" />
        <activity android:name=".UserInfoActivity" />
        <activity android:name=".SignUpActivity" />
        <activity android:name=".PasswordResetActivity" />
        <activity android:name=".MemberInitActivity" />
        <activity android:name=".LoginActivity" />
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Cal"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".RecoWay"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ResultActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>